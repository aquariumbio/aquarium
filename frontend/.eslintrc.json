{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:cypress/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "cypress"
    ],
    "rules": {
        "jsx-quotes": ["error", "prefer-double"],
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true,
            "optionalDependencies": false,
            "peerDependencies": false
          }
        ],
        "no-unused-expressions": [0, { "extensions": ["*spec.js"] }],
        "react/jsx-filename-extension": [0, { "extensions": ["*spec.js"] }],
        "react/jsx-one-expression-per-line": "off",
        "no-debugger": "warn",
        "no-console": "warn",
        "no-unused-vars": "warn",
        "object-curly-newline": "off"
    }
}
