{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:cypress/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "cypress"],
  "rules": {
    "prettier/prettier": "warn",
    "import/no-extraneous-dependencies": [
      "warn",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "no-unused-expressions": [0, { "extensions": ["*spec.js"] }],
    "react/jsx-filename-extension": [0, { "extensions": ["*spec.js"] }],
    "react/jsx-one-expression-per-line": 0,
    "no-debugger": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "react/require-default-props": [0],
    "no-useless-return": "warn",
    "operator-linebreak": [
      "warn",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ]
  }
}
