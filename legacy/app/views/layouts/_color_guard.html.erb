
<script>

  if ( '<%= Rails.env %>' == 'rehearse' ) {

    document.getElementById('logo').style.color = '$selection-highlight-color';
    document.getElementById('header-bar').style.background = '#720';

  } else if ( '<%= Rails.env %>' == 'production'  ) {

    document.getElementById('logo').style.color = '#0f2';
    document.getElementById('header-bar').style.background = '#02a';    

  } else {

    document.getElementById('logo').style.color = '#0f2';
    document.getElementById('header-bar').style.background = '$button-color';
    document.getElementById('header-navbar').style.border = 'none';

  }

</script>