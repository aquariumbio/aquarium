<div class="header not-scrollable no-print">

  <md-toolbar class="main-toolbar md-hue-25">

    <div class="md-toolbar-tools">

      <md-menu layout="row">

        <div class='detail-menu clickable'
             ng-click="openMenu($mdMenu, $event)">
          <ng-md-icon icon="menu" size="30" aria-label="Menu"></ng-md-icon>
        </div>

        <md-menu-content width="4" class="scrollable" flex>

          <md-menu-item>
            <md-button href="/static_pages/direct_purchase">Direct Purchase</md-button>
          </md-menu-item>

          <md-menu-divider></md-menu-divider>

          <md-menu-item>
            <md-button href="/logs">Logs</md-button>
          </md-menu-item>

          <% if current_user && current_user.is_admin %>

            <md-menu-divider></md-menu-divider>

            <md-menu-item>
              <md-button href="/users">Users</md-button>
            </md-menu-item>
            <md-menu-item>
              <md-button href="/groups">Groups</md-button>
            </md-menu-item>          
            <md-menu-item>
              <md-button href="/announcements">Announcements</md-button>
            </md-menu-item>            

            <md-menu-divider></md-menu-divider>

            <md-menu-item>
              <md-button href="/budgets">Budgets</md-button>
            </md-menu-item>
            <md-menu-item>
              <md-button href="/invoices?all=true">Invoices</md-button>
            </md-menu-item>
            <md-menu-item>
              <md-button href="/parameters">Parameters</md-button>
            </md-menu-item>

            <md-menu-divider></md-menu-divider>

            <md-menu-item>
              <md-button href="/sample_types">Sample Type Definitions</md-button>
            </md-menu-item>
            <md-menu-item>
              <md-button href="/object_types">Containers</md-button>
            </md-menu-item>            
            <md-menu-item>
              <md-button href="/wizards">Location Wizards</md-button>
            </md-menu-item>

            <md-menu-divider></md-menu-divider>

            <md-menu-item>
              <md-button href="/import">Import Workflows</md-button>
            </md-menu-item>     

            <md-menu-item>
              <md-button href="/publish">Export Workflows</md-button>              
            </md-menu-item>                         

          <% end %>

          <md-menu-divider></md-menu-divider>          

          <md-menu-item>
            <md-button href="http://klavinslab.org/aquarium" class="dropdown-toggle" target='documentation'>Help</md-button>
          </md-menu-item>

        </md-menu-content>

      </md-menu> 

      <div class="aq2-logo" layout="column" flex md-truncate>
        <div class='top'>
          <a href="/" class="aquarium">AQUARIUM</a>
          <span class="version">v<%= Bioturk::Application.config.aquarium_version %></span>
        </div>
        <div class='bottom'>
          <span class="instance"><%= Bioturk::Application.config.instance_name %>:</span>
          <span class="mode"><%= Rails.env %></span>
        </div>
      </div>

      <md-button href="/plans" aria-label="Designer" 
                 class="main-button <%= yield(:title) == 'Designer' ? 'underlined' : '' %>">
        <%= link_to "Designer", plans_path %>
      </md-button>

      <md-button href="/launcher" aria-label="Plans"
                 class="main-button <%= yield(:title) == 'Plans' ? 'underlined' : '' %>">
        <%= link_to "Plans", launcher_path %>
      </md-button>


      <% if Bioturk::Application.config.technician_dashboard %>
        <md-button href="/technician_dashboard" aria-label="Technician"
                   class="main-button <%= yield(:title) == 'Technician' ? 'underlined' : '' %>">
          <%= link_to "Technician", '/technician_dashboard' %>
        </md-button>
      <% end %>

      <md-button href="/operations" aria-label="Manager"
                 class="main-button <%= yield(:title) == 'Manager' ? 'underlined' : '' %>">
        <%= link_to "Manager", operations_path %>
      </md-button>      

      <md-button href="/browser" aria-label="Samples"
                 class="main-button <%= yield(:title) == 'Samples' ? 'underlined' : '' %>">
        <%= link_to "Samples", browser_path %>
      </md-button>

      <% if current_user && current_user.is_admin %>        

        <md-button href="/operation_types" aria-label="Developer"
                   class="main-button <%= yield(:title) == 'Developer' ? 'underlined' : '' %>">
          <%= link_to "Developer", operation_types_path %>
        </md-button>

      <% end %>      

      <md-menu> 

        <md-button class="login"
                   ng-click="openMenu($mdMenu, $event)" 
                   aria-label="<%= current_user.login %>"
                   id="user-specific-button">
          &#x25CF; <%= current_user.login %>          
        </md-button>

        <md-menu-content width="3" class="scrollable">
          <md-menu-item>
            <md-button href='/users/<%= current_user.id %>' id="profile-button">Profile</md-button>
          </md-menu-item>
          <md-menu-item>
            <md-button href="/invoices" id="invoices-button">Invoices</md-button>
          </md-menu-item>
          <md-menu-divider></md-menu-divider>          
          <md-menu-item>
            <md-button href="/signout" data-method="delete" id="signout-button">Signout</md-button>
          </md-menu-item>         
        </md-menu-content>

      </md-menu> 

    </div>

  </md-toolbar>

</div>