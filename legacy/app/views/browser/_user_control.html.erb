<div class="browser-control browser-control-plain" 
     ng-show="user.current">

  <h5>Project / Sample Filter</h5>

  <div class="btn-group">

    <button class="btn btn-small">
      {{views.user.current.name}}
    </button>

    <button class="btn btn-small dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>

    <ul class="dropdown-menu scrollable-menu">
      <li><a href="#" ng-click="choose_user(everyone)">All</a></li>
      <li class='divider'></li>
      <li ng-repeat="user in user.all track by $index">
        <a href="#" ng-click="choose_user(user)">{{user.name}} ({{user.login}})</a>
      </li>                 
    </ul>

  </div>

  <label class="checkbox user-filter" style="display: inline-block">
    <input type=checkbox 
           ng-model='views.user.filter' 
           ng-checked='views.user.filter' /> Filter?
  </label>

</div>
