</div>
<script>
  function toggle(m) {

    if ($('#'+m).css('display') == "none") {
      clear_menus()
      $('#'+m).show()
    } else $('#'+m).hide()
    event.stopPropagation()
  }

  function clear_menus(m) {
    $('#hamburger_menu').hide()
    $('#activity_menu').hide()
    $('#user_menu').hide()
  }

  window.onclick = function(event) {
    clear_menus()
  }


</script>
