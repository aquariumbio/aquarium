<!DOCTYPE html>
<html ng-app='aquarium' ng-controller='layoutCtrl' xng-cloak xstyle="overflow: hidden" xng-strict-di lang="en">

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title><%= yield(:title) %></title>

    <%= render partial: 'layouts/vendor_code' %>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>

  <script>

    // set the environment name for use in cookies
     aquarium_environment_name = '<%= Bioturk::Application.environment_name %>';

    $(function() {
      $('.not-scrollable').on('wheel', function ( e ) {
        e.preventDefault();
      });
    });

  $(function() {
    // Set focus of keyboard events to main content, so keydown events work.
    window.setTimeout(() => $("#content-container").focus(), 500)
  });

  </script>

  <style>

    body {
      margin:0 !important;
      padding:0 !important;
      overflow: auto;
    }


  </style>

  </head>

  <body>
    <script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>

    <div style="position:fixed;top:0;width:100%;height:64px;z-index:1000;">
      <%= render partial: '/layouts/aq2header_new' %>
    </div>
    <div style="height:64px"></div>


    <%= yield %>
  </body>

</html>
