<tr>
   <td><%= link_to user.name, user %></td>
   <td><%= user.login %></td>
   <td><%= user.created_at.strftime("%m/%d/%Y") %></td>
   <% if current_user.is_admin && !current_user?(user) %>
     <td>
       <%= link_to "retire", user, method: :delete, data: { confirm: "Are you sure you want to retire this user?" } %>
     </td>
   <% else %>
     <td></td>
   <% end %>

</tr>
